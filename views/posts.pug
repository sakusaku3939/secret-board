doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    title オリジナル匿名掲示板
    link(rel="stylesheet",
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css",
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm",
    crossorigin="anonymous")
    link(href="https://use.fontawesome.com/releases/v5.6.1/css/all.css", rel="stylesheet")
    style.
      .user {
        font-size: 1.2em;
        line-height: 36px;
        margin-right: 16px;
      }
      *:focus {
        box-shadow:none !important;
      }
      .btn-primary {
        background: #F57C00;
        border: 2px solid #F57C00;
      }
      .btn-primary:hover {
        background: #EF6C00;
        border: 2px solid #EF6C00;
      }
      .btn-primary:not(:disabled):not(.disabled):active {
        background: #E65100;
        border: 2px solid #E65100;
      }
      .btn-danger {
        background: #e74c3c;
        border: 2px solid #e74c3c;
      }
      .btn-danger:hover {
        background: #e53935;
        border: 2px solid #e53935;
      }
      .btn-danger:not(:disabled):not(.disabled):active {
        background: #d32f2f;
        border: 2px solid #d32f2f;
      }
      .btn-outline-info {
        color: #1976D2;
        border: 1px solid #1976D2;
      }
      .btn-outline-info:hover {
        background: rgb(0,0,0,.02);
        color: #1976D2;
        border: 1px solid #1976D2;
      }
      .btn-outline-info:not(:disabled):not(.disabled):active {
        background: #1565C0;
        border: 1px solid #1565C0;
      }
      .btn-info {
        background: #1976D2;
        border: 3px solid #1976D2;
      }
      .btn-info:hover {
        background: #1565C0;
        border: 3px solid #1565C0;
      }
      .btn-info:not(:disabled):not(.disabled):active {
        background: #1565C0;
        border: 3px solid #1565C0;
      }
  
  body.container
    if message === 1
      .alert.alert-success.alert-dismissible(role='alert')
        button.close(type='button', data-dismiss='alert', aria-label='Close' onclick='history.replaceState(null,null,"/posts")')
          span(aria-hidden='true') ×
        |  ログインしました。
    else if message === 2
      .alert.alert-warning.alert-dismissible(role='alert')
        button.close(type='button', data-dismiss='alert', aria-label='Close' onclick='history.replaceState(null,null,"/posts")')
          span(aria-hidden='true') ×
        |  ログアウトしました。
    div.my-3
      if user === "guestmode"
        a(href="/login").btn.btn-info.float-right ログイン
      else
        a(href="/logout").btn.btn-outline-info.float-right ログアウト
        div.user.float-right
          i.far.fa-user
          span(style="margin-left: 8px;") #{user}
      h1 匿名掲示板
    hr
    br
    h2 新規投稿
    form(method="post" action="/posts")
      div.form-group
        textarea(name="content" rows="4").form-control
        input(type="hidden" name="oneTimeToken" value=oneTimeToken)
      div.form-group
        button(type="submit").btn.btn-primary 投稿
      br
      hr
    h2 投稿一覧
    each post in posts
      div.card.my-3
        div.card-header
          - var isPostedByAdmin = (post.postedBy === 'admin')
          if isPostedByAdmin
            span #{post.id} : 管理人 ★
          else
            - var originalTrackingId = post.trackingCookie ? post.trackingCookie.split('_')[0] : ''
            span #{post.id} : ID:#{originalTrackingId}
        div.card-body
          p.card-text(style="white-space:pre-wrap; overflow:auto;") #{post.content}
        div.card-footer
          div 投稿日時: #{post.formattedCreatedAt}
          - var isAdmin = (user === 'admin')
          if isAdmin
            div 投稿者: #{post.postedBy}
          - var isDeletable = (id === originalTrackingId || isAdmin)
          if isDeletable
            form(method="post" action="/posts?delete=1")
              input(type="hidden" name="id" value=post.id)
              input(type="hidden" name="oneTimeToken" value=oneTimeToken)
              button(type="submit").btn.btn-danger.float-right 削除

      script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js")
      script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js",
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl",
      crossorigin="anonymous")